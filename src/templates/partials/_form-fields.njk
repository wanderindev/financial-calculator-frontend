{% macro extraDepRadio() %}
                        <div class="field">
                            <div class="field-label is-small">
                                <label class="label cf-field-label cf-rb">¿Aportes extraordinarios?</label>
                            </div>
                            <div class="field-body">
                                <div class="field">
                                    <div class="control">
                                        <label class="radio extra_dep_r">
                                            <input type="radio" value="1" name="extra_dep_r">
                                            <span class="radio-text">Si</span>
                                        </label>
                                        <label class="radio extra_dep_r">
                                            <input type="radio" value="0" name="extra_dep_r" checked>
                                            <span class="radio-text">No</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
{% endmacro %}

{% macro depWhenRadio() %}
