{% macro textField( id, label, value = '', placeholder = '' ) %}
                            <div class="field is-horizontal {{id}}">
                                <div class="field-label is-small">
                                    <label class="label cf-field-label">{{label}}</label>
                                </div>
                                <div class="field-body">
                                    <div class="field">
                                        <p class="control">
                                            <input id="{{id}}" class="input is-small" type="text" placeholder="{{placeholder}}">
                                        </p>
                                    </div>
                                </div>
                            </div>
{% endmacro %}

{% macro freqSelect() %}
                            <div class="field is-horizontal">
                                <div class="field-label is-small">
                                    <label class="label cf-field-label">Frecuencia</label>
                                </div>
                                <div class="field-body">
                                    <div class="field">
                                        <div class="control">
                                            <div class="select is-small is-fullwidth">
                                                <!--suppress HtmlFormInputWithoutLabel -->
                                                <select id="freq">
                                                    <option value="1">Anual</option>
                                                    <option value="2">Semi-anual</option>
                                                    <option value="3">Cuatrimestral</option>
                                                    <option value="6">Bimestral</option>
                                                    <option value="12" selected>Mensual</option>
                                                    <option value="24">Quincenal</option>
                                                    <option value="26">Bi-semanal</option>
                                                    <option value="52">Semanal</option>
                                                    <option value="364">Diario</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
{% endmacro %}

