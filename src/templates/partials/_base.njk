{% import "_form-fields.njk" as formFields %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{page}}</title>
    <!-- inject:css -->
    <!-- endinject -->
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>
<div class="container">
    <!-- Navbar start -->
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://anafeliu.com" title="Inicio">
                <h1 class="header-logo"></h1>
            </a>
            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="mobile-menu" class="navbar-menu is-hidden-desktop">
            <div class="navbar-end">
                <div class="navbar-item">
                    {% include '_menu.njk' %}
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar ends -->
</div>
<section class="section cf-section">

    <!-- Container start -->
    <div class="container">

        <!-- Content start -->
        <div class="columns">

            <!-- Side menu starts -->
            <aside class="menu is-hidden-touch column is-narrow">
                {% include '_menu.njk' %}
            </aside>
            <!-- Side menu ends -->

            <!-- Calculator starts -->
            <div class="column">

                <div class="columns is-multiline">

                    <!-- Title starts -->
                    <div class="column is-full-tablet page-title">
                        <h1 class="title is-4">{{page}}</h1>
                    </div>
                    <!-- Title ends -->

                    <!-- Form starts -->
                    <div class="column is-full-tablet is-half-desktop is-one-third-widescreen">
                        <div class="calculator-form">
                        {% for field in forms[page] %}
                            {% if field.type == 'textField' %}
                                {{ formFields['textField'](field.id, field.label, field.value, field.placeholder) }}
                                {% elif field.type == 'freqSelect' %}
                                {{ formFields['freqSelect']() }}
                                {% elif field.type == 'extraDepFreqSelect' %}
                                {{ formFields['extraDepFreqSelect']() }}
                                {% elif field.type == 'extraDepRadio' %}
                                {{ formFields['extraDepRadio']() }}
                                {% elif field.type == 'depWhenRadio' %}
                                {{ formFields['depWhenRadio']() }}
                            {% endif %}
                        {% endfor %}
                        </div>
                        {{ formFields['calculateButton'](page) }}
                    </div>
                    <!-- Form ends -->

                    <!-- Results starts -->
                    <div class="column is-full-tablet is-half-desktop is-two-thirds-widescreen">
                        <div class="card results-card is-invisible">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Resultados
                                </p>
                            </header>
                            <div class="card-content">
                                <div class="content columns is-multiline">
                                    <div class="results column is-full-tablet">
                                        {% for field in results[page] %}
                                            {{ formFields['textField'](field.id, field.label, field.value, field.placeholder) }}
                                        {% endfor %}
                                    </div>
                                    <div id="pie-chart" class="pie-chart column is-half-tablet is-full-desktop is-half-widescreen"></div>
                                    <div id="line-chart" class="line-chart column is-half-tablet is-full-desktop is-half-widescreen"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Results ends -->

                    <!-- Table starts -->
                    <div class="column is-full-tablet">
                        {% block table %}

                        {% endblock %}
                    </div>
                    <!-- Table ends -->

                </div>

            </div>
            <!-- Calculator ends -->

        </div>
        <!-- Content ends -->

    </div>
    <!-- Container ends -->
</section>
<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<!-- Nunjucks JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/nunjucks/3.0.1/nunjucks.min.js"></script>
<!-- Plotly JS -->
<script src="https://cdn.plot.ly/plotly-1.2.0.min.js"></script>

<!-- inject:js -->
<!-- endinject -->
</body>
</html>
